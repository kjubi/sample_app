<% if @user.errors.any? %>
   <div class="error_explanation" id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> 
      prohibited this user from successful sign up</h2>
      <p>there was problems with following fields:</p>
      
      <ul>
         <% @user.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
         <% end %>
         
      </ul>
      
   </div>
   
<% end %>
